<h1>Create a new Figure</h1>

<!-- Enter the figure's name -->
<form action='/figures' method='POST'>
  <label>Figure Name</label>
  <input type='text' name='figure[name]' id='figure_name'>

  <!-- Choose the figure's different titles/create new -->
  <p><label>Titles</label>
  <% Title.all.each do |t| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= t.name %>" id="title_<%= "#{t.id}"%>">
  <% end %> </p>

  <p><label>Create new title</label>
  <input type='text' name='title[name]' id='new_title'> </p>

  <!-- Choose the figure's different landmarks/create new -->
  <p><label>Landmarks</label>
  <% Landmark.all.each do |l| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= l.name %>" id="landmark_<%= "#{l.id}"%>">
  <% end %> </p>

  <label>Create a new landmark</label>
  <input type='text' name='landmark[name]' id='new_landmark'>

  <p><input type='submit' value='Create New Figure'></p>

</form>
